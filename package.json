{
  "name": "vitepress-plugin-blog-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "dev": "npm run plugin:build && vitepress dev docs",
    "build": "npm run plugin:build && vitepress build docs",
    "preview": "vitepress preview docs",
    "plugin:build": "npm -w vitepress-plugin-blog run build",
    "plugin:watch": "npm -w vitepress-plugin-blog run watch"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "vite": "^6.0.0",
    "vitepress": "^1.6.3",
    "vue": "^3.5.13"
  },
  "engines": {
    "node": ">=18"
  }
}
